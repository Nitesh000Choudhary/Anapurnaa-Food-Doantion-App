<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim_50"
    android:background="@drawable/shining_bg"
    android:fitsSystemWindows="true"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/id1_logo"
        android:layout_width="226dp"
        android:layout_height="234dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/main_logo"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/id2_appName"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="@dimen/dim_20"
        android:fontFamily="@font/mukta_vaani_medium_500"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/Text1"
        android:textSize="@dimen/sp_55"
        android:transitionName="T1_logo_Text" />

    <TextView
        android:id="@+id/id3_slogan"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginTop="@dimen/dim_1"
        android:fontFamily="@font/mukta_vaani_medium_500"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/Text1"
        android:textSize="@dimen/sp_25" />

</LinearLayout>